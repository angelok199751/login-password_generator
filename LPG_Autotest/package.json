{
  "name": "lpg_autotest",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "allure:open": "allure open allure-report",
    "report-html": "npx playwright show-report",
    "ui-mode": "npx playwright test --ui",
    "codegen": "npx playwright codegen",
    "setup:docker": "node setup-docker.js",
    "test:docker": "docker compose up --build -d",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "copy-report": "rm -rf ./allure_static/* && cp -r ./allure-report/* ./allure_static/",
    "deploy:allure": "vercel deploy allure_static --prod",
    "test:json": "npx playwright test --reporter=json > test-results.json",
    "notify": "node sendTelegram.js",
    "test:notify": "npm run test:json && npm run notify",
    "full-docker-deploy": "npm run test:docker && npm run allure:generate && npm run copy-report && npm run deploy:allure && npm run test:notify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "allure-codeceptjs": "^3.3.3",
    "allure-playwright": "^3.3.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "node-fetch": "^3.3.2"
  }
}
